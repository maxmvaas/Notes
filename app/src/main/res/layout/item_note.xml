<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/note_item_margin_top"
    app:cardCornerRadius="@dimen/note_item_corner_radius"
    tools:cardBackgroundColor="@color/second">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/note_item_title_margin_horizontal"
            android:layout_marginVertical="@dimen/note_item_title_margin_vertical"
            android:fontFamily="@font/nunito_regular"
            android:maxLines="5"
            android:textColor="@color/black"
            android:textSize="@dimen/note_item_title_text_size"
            tools:text="Book Review : The Design of Everyday Things by Don Norman" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/button_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/delete"
        android:contentDescription="@string/delete"
        android:src="@drawable/ic_trash"
        android:visibility="gone" />

</androidx.cardview.widget.CardView>